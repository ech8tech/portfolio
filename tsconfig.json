{
  "compilerOptions": {
    "baseUrl": "./",

    "types": ["node"],

    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,

    "paths": {
      "@src": ["./src"],
      "@src/*": ["./src/*"],
      "@types": ["./src/types"],
      "@types/*": ["./src/types/*"],
      "@app": ["./src/app"],
      "@app/*": ["./src/app/*"],
      "@assets": ["./src/assets"],
      "@assets/*": ["./src/assets/*"],
      "@modules": ["./src/modules"],
      "@modules/*": ["./src/modules/*"],
      "@projects": ["./src/projects"],
      "@projects/*": ["./src/projects/*"],
      "@styles": ["./src/styles"],
      "@styles/*": ["./src/styles/*"]
    }
  },
  "include": ["./**/*"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
